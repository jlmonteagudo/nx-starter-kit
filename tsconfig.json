{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@blog/feature-layout": [
        "libs/feature-layout/src/index.ts"
      ],
      "@blog/feature-blog": [
        "libs/feature-blog/src/index.ts"
      ],
      "@blog/shared/ui-material": [
        "libs/shared/ui-material/src/index.ts"
      ],
      "@blog/data-access-blog": [
        "libs/data-access-blog/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
